<Window
    x:Class="the_wym_script.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:the_wym_script"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--  Grid布局容器，添加了边距和行列定义  -->
    <Grid Margin="20">
        <!--  定义一行用于放置按钮（高度自适应内容）  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  配置按钮  -->
        <Button
            Width="100"
            Height="30"
            Margin="0,10,0,0"
            Click="ConfigButton_Click"
            Content="配置"
            FontSize="14" />
    </Grid>
</Window>
