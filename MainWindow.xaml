<Window x:Class="The_wym_script.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:The_wym_script"
        xmlns:views="clr-namespace:The_wym_script.UI.Views"
        xmlns:settingsViews="clr-namespace:The_wym_script.UI.Views.Settings"
        Title="WYM启动器" Height="600" Width="800">
    
    <Grid>
        <!-- 1. 顶部按钮栏 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/> <!-- 按钮行 -->
            <RowDefinition Height="*"/>  <!-- 内容显示行（占剩余空间） -->
        </Grid.RowDefinitions>

        <!-- 顶部按钮：切换到主界面/设置界面
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button 
                Content="主界面" 
                Width="80" Height="30" 
                Margin="5"
                Click="HomeButton_Click"/>
            
            <Button 
                Content="设置" 
                Width="80" Height="30" 
                Margin="5"
                Click="SettingsButton_Click"/>
        </StackPanel> -->

        <!-- 2. 内容容器：动态显示不同界面 -->
        <ContentControl 
            Grid.Row="1" 
            x:Name="MainContentContainer"/> <!-- 给容器起个名字，方便后台代码操作 -->
    </Grid>
</Window>