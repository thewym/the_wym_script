<Window
    x:Class="The_wym_script.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:The_wym_script"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WYM启动器"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  窗口控制按钮样式  -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D4EED1" />
                            </Trigger>
                            <Trigger Property="Tag" Value="Close">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#E81123"
                                                Duration="0:0:0.1" />
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Foreground.Color"
                                                To="White"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="Transparent"
                                                Duration="0:0:0.1" />
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Foreground.Color"
                                                To="#333333"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!--  根容器用DockPanel：强制标题栏置顶，内容区填充下方剩余空间（彻底避免重叠）  -->
    <DockPanel LastChildFill="True">
        <!--  1. 标题栏：DockPanel.Dock="Top" 强制置顶  -->
        <Border
            Height="50"
            Background="#E3F2E1"
            BorderBrush="#C8E6C9"
            BorderThickness="1,1,1,0"
            CornerRadius="10,10,0,0"
            DockPanel.Dock="Top">

            <Grid MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  窗口标题  -->
                <TextBlock
                    Grid.Column="0"
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="#2E7D32"
                    Text="WYM启动器" />

                <!--  窗口控制按钮  -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button
                        Width="45"
                        Height="50"
                        Click="WindowControlButton_Click"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Tag="Minimize">
                        <TextBlock
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Text="&#xE921;" />
                    </Button>
                    <Button
                        Width="45"
                        Height="50"
                        Click="WindowControlButton_Click"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Tag="Close">
                        <TextBlock
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Text="&#xE8BB;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  2. 内容区：DockPanel默认填充剩余空间（无需Margin，自动在标题栏下方）  -->
        <Border
            Background="White"
            BorderBrush="#C8E6C9"
            BorderThickness="1,0,1,1"
            CornerRadius="0">

            <ContentControl x:Name="MainContentContainer" Margin="10" />  
            <!--  内容区内边距，避免内容贴边  -->
        </Border>
    </DockPanel>
</Window>
