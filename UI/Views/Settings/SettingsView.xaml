<UserControl x:Class="The_wym_script.UI.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="游戏设置" FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>
            
            <TextBlock Text="游戏安装路径：" Margin="0 10 0 5"/>
            <TextBox Width="300" Height="30" Text="C:\Minecraft"/>
            
            <Button 
                Content="保存设置" 
                Width="100" 
                Height="30" 
                Margin="0 20 0 0"
                Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>