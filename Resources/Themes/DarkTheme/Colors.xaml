<!--  浅色主题颜色表：仅定义颜色值，键名与ButtonStyles.xaml严格对应  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Foreground" Color="#cccccc" />
    <SolidColorBrush x:Key="Background" Color="#181818" />
    <SolidColorBrush x:Key="BorderBrush" Color="White" />

    <SolidColorBrush x:Key="Btn.Normal.Background" Color="{Binding Source={StaticResource Background}, Path=Color}" />
    <SolidColorBrush x:Key="Btn.Normal.Foreground" Color="{Binding Source={StaticResource Foreground}, Path=Color}" />
    <SolidColorBrush x:Key="Btn.Normal.BorderBrush" Color="{Binding Source={StaticResource BorderBrush}, Path=Color}" />

    <SolidColorBrush x:Key="Btn.Normal.MouseOver.Background" Color="#373737" />
    <SolidColorBrush x:Key="Btn.Normal.MouseOver.Foreground" Color="#cccccc" />
    <SolidColorBrush x:Key="Btn.Normal.Pressed.Background" Color="#545454" />
    <SolidColorBrush x:Key="Btn.Normal.Pressed.Foreground" Color="#cccccc" />

    <SolidColorBrush x:Key="Btn.WinClose.MouseOver.Background" Color="#E81123" />
    <SolidColorBrush x:Key="Btn.WinClose.MouseOver.Foreground" Color="#ffffff" />
    <SolidColorBrush x:Key="Btn.WinClose.Pressed.Background" Color="#94141f" />
    <SolidColorBrush x:Key="Btn.WinClose.Pressed.Foreground" Color="#ffffff" />
</ResourceDictionary>
