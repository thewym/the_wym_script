<!--  浅色主题的基础颜色值（仅定义Color，不直接用于控件）  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  标题栏相关颜色  -->
    <Color x:Key="TitleBar.Background">#E3F2E1</Color>
    <!--  标题栏背景色（浅绿色）  -->
    <Color x:Key="TitleBar.Border">#C8E6C9</Color>
    <!--  标题栏边框色（浅绿偏白）  -->

    <!--  文字相关颜色  -->
    <Color x:Key="Text.Primary">#2E7D32</Color> 
    <!--  主要文字（深绿色，标题/按钮）  -->
    <Color x:Key="Text.Secondary">#558B2F</Color>
    <!--  次要文字（中绿色，说明文字）  -->
    <Color x:Key="Text.Disabled">#A5D6A7</Color>
    <!--  禁用文字（浅灰绿）  -->

    <!--  按钮相关颜色  -->
    <Color x:Key="Button.Hover.Background">#D4EED1</Color>
    <!--  按钮hover背景（比标题栏略深的绿）  -->
    <Color x:Key="Button.Close.Hover.Background">#E81123</Color>
    <!--  关闭按钮hover背景（红色）  -->
    <Color x:Key="Button.Text">#333333</Color>
    <!--  按钮默认文字色（深灰）  -->

    <!--  窗口背景色  -->
    <Color x:Key="Window.Background">#FFFFFF</Color>
    <!--  窗口内容区背景（白色）  -->

</ResourceDictionary>
