<!--  通用基础样式：所有控件共用的非主题属性（不涉及颜色）  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  全局字体设置（所有文本类控件共用）  -->
    <FontFamily x:Key="GlobalFontFamily">Segoe UI</FontFamily>
    <x:Double x:Key="GlobalFontSize">14</x:Double>

    <!--  通用按钮基础属性（所有按钮共用的布局/行为）  -->
    <Style x:Key="CommonButtonBase" TargetType="{x:Type Button}">
        <!--  字体相关（不随主题变）  -->
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource GlobalFontSize}" />

        <!--  布局相关（不随主题变）  -->
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="8,4" />

        <!--  交互相关（不随主题变）  -->
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!--  通用文本块基础属性（所有文本共用）  -->
    <Style x:Key="CommonTextBase" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource GlobalFontSize}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
