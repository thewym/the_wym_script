<!--  通用基础样式：适配.NET Core/.NET 5+（支持XAML 2009特性）  -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!--  .NET Core中引用System命名空间  -->

    <!--  全局字体设置（使用x:Double，.NET Core原生支持）  -->
    <FontFamily x:Key="GlobalFontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="GlobalFontSize">14</sys:Double>
    <!--  .NET Core支持x:Double标记  -->

    <!--  通用按钮基础属性（所有按钮共用的布局/行为）  -->
    <Style x:Key="CommonButtonBase" TargetType="{x:Type Button}">
        <!--  字体相关（不随主题变）  -->
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource GlobalFontSize}" />

        <!--  布局相关（.NET Core中Button支持CornerRadius，可直接定义）  -->
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="4" />
        <!--  .NET Core中Button原生支持圆角  -->

        <!--  交互相关（不随主题变）  -->
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!--  通用文本块基础属性（所有文本共用）  -->
    <Style x:Key="CommonTextBase" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource GlobalFontSize}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
