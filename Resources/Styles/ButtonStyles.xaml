<!--  按钮样式逻辑：适配.NET Core，利用原生CornerRadius属性  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  合并通用基础样式  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/CommonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  基础按钮样式（继承通用属性，补充主题相关设置）  -->
    <Style
        x:Key="BaseButtonStyle"
        BasedOn="{StaticResource CommonButtonBase}"
        TargetType="{x:Type Button}">
        <!--  颜色引用主题表（.NET Core中DynamicResource支持更优）  -->
        <Setter Property="Background" Value="{DynamicResource Button.Normal.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Button.Normal.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Button.Normal.Foreground}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--  关闭按钮样式（继承基础样式，仅补充特有属性）  -->
    <Style
        x:Key="CloseButtonStyle"
        BasedOn="{StaticResource BaseButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="0" /> 
        <!--  关闭按钮无边角  -->
    </Style>

    <!--  确认按钮样式  -->
    <Style
        x:Key="ConfirmButtonStyle"
        BasedOn="{StaticResource BaseButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="36" />
    </Style>

</ResourceDictionary>
