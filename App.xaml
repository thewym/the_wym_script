<Application
    x:Class="The_wym_wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:The_wym_wpf"
    StartupUri="Views/MainWindow/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  通用基础样式  -->
                <ResourceDictionary Source="/Resources/CommonStyles.xaml" />
                <!--  按钮样式逻辑  -->
                <ResourceDictionary Source="/Resources/Styles/ButtonStyles.xaml" />
                <!--  当前主题颜色表（切换主题只需改这里）  -->
                <ResourceDictionary Source="/Resources/Themes/LightTheme/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
